<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Reclamo</title>
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationSistemaDeReclamo.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/bx-home.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    Skyline Builders
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-area="" asp-controller="Reclamos" asp-action="Index">
                                Reclamos
                            </a>
                            <ul class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reclamos" asp-action="Index">Lista</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reclamos" asp-action="Create">Crear reclamo</a>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav justify-content-end">
                        <li class="nav-item fw-bold">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @{
            if (ViewData["Title"] == "Home Page")
            {
                <div class="contenedor badge text-wrap bg-dark bg-opacity-25">
                    <h1 class="fs-1 fw-bold">¡Haz realidad tus sueños con nosotros!</h1>
                    <p class="copy fs-4">¡Construyendo tus sueños, piso a piso!</p>
                </div>
            };
        }
        
    </header>
    <div class="container-fluid mt-5">
        <main role="main" id="focus">
            @RenderBody()
        </main>
    </div>
    
    <footer class="py-3 my-4 bg-light border text-center text-black">
        <div class="container my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item">
                    <a class="nav-link px-2 text-black" asp-area="" asp-controller="Home" asp-action="Index"> Home </a>
                </li>
                <li>
                    <a class="nav-link px-2 text-black" asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy </a>
                </li>
                <li>
                    <a class="nav-link px-2 text-black" asp-area="" asp-controller="Reclamos" asp-action="Index"> Reclamos </a>
                </li>
            </ul>
            <p>&copy; 2023 - Skyline Builders, Inc</p>
        </div>   
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/lib/slick/slick.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootbox/bootbox.all.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
